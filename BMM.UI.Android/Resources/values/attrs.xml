<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <declare-styleable name="ListView">
        <attr name="header" format="reference" />
        <attr name="footer" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="BmmTextView">
        <attr name="roundedTextHorizontalPadding" format="dimension"/>
        <attr name="roundedTextVerticalPadding" format="dimension"/>
        <attr name="roundedTextDrawable" format="reference"/>
    </declare-styleable>

    <attr name="tint_color" format="reference|color" />
    <attr name="background_four_color" format="reference|color" />
    <attr name="on_color_one_color" format="reference|color" />

    <!-- Lottie attributes -->
    <declare-styleable name="LottieAnimationView">
        <attr name="lottie_autoPlay" format="boolean" />
        <attr name="lottie_loop" format="boolean" />
        <attr name="lottie_rawRes" format="reference" />
        <attr name="lottie_fileName" format="string" />
    </declare-styleable>
</resources>