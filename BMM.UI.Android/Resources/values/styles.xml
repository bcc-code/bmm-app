    <style name="Subtitle1_Label3" parent="Subtitle1">
        <item name="android:textColor">@color/label_three_color</item>
    </style>

    <style name="Subtitle1_TintColor" parent="Subtitle1">
        <item name="android:textColor">?attr/tint_color</item>
    </style>

    <style name="Subtitle2">
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Subtitle2_Label1" parent="Subtitle2">
        <item name="android:textColor">@color/label_one_color</item>
