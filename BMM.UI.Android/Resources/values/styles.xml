    </style>

    <style name="Subtitle2_Label3" parent="Subtitle2">
        <item name="android:textColor">@color/label_three_color</item>
    </style>

    <style name="Subtitle3">
        <item name="android:textSize">13sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Subtitle3_Label1" parent="Subtitle3">
