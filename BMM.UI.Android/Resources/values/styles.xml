<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Application theme -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textFontWeight">500</item>
        <item name="colorPrimary">@color/tint_color</item>
        <item name="colorPrimaryDark">@color/background_primary_color</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="android:navigationBarColor">@color/label_primary_reverted_color</item>
        <item name="android:windowBackground">@color/background_secondary_color</item>

        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/tint_color</item>
        <item name="colorControlHighlight">@color/highlight_color</item>

        <item name="android:textCursorDrawable">@null</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/WindowTransitionAnimation</item>
    </style>

    <style name="WindowTransitionAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/tint_color</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColorPrimary">@color/label_primary_color</item>
    </style>

    <style name="AppTheme.CollapseBarTextAppearance.Collapsed" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">@color/label_primary_color</item>
    </style>

    <style name="AppTheme.CollapseBarTextAppearance.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">@color/label_primary_color</item>
    </style>

    <style name="AppTheme.Tab">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="AppTheme.Tab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">700</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme.Dark">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/tint_color</item>
        <item name="colorControlHighlight">@color/highlight_color</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorPrimaryDark">@color/tint_color</item>
    </style>

    <style name="AppTheme.BottomNavigationTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/label_primary_color</item>
        <item name="itemTextColor">@color/navigation_color_selector</item>
        <item name="itemIconTint">@color/navigation_color_selector</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="ProgressGreen" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/rotate_spinner</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">25dp</item>
        <item name="android:maxHeight">25dp</item>
        <item name="android:layout_marginTop">@dimen/element_margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/element_margin_medium</item>
    </style>

    <style name="SeekBarPlayer" parent="android:Widget.Material.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:splitTrack">false</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

    <style name="SeekBarMiniPlayer" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:minHeight">2.5dip</item>
        <item name="android:maxHeight">2.5dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:thumbOffset">0dip</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="Heading2">
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">32sp</item>
        <item name="android:textColor">@color/label_primary_color</item>
        <item name="android:textFontWeight">800</item>
    </style>

    <style name="Heading3" parent="Heading2">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Subtitle1">
        <item name="android:textSize">17sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Subtitle1_Label1" parent="Subtitle1">
        <item name="android:textColor">@color/label_primary_color</item>
    </style>
    
    <style name="Subtitle1_Label2" parent="Subtitle1">
        <item name="android:textColor">@color/label_secondary_color</item>
    </style>

    <style name="Subtitle2">
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Subtitle2_Label1" parent="Subtitle2">
        <item name="android:textColor">@color/label_primary_color</item>
    </style>

    <style name="Subtitle2_Label2" parent="Subtitle2">
        <item name="android:textColor">@color/label_secondary_color</item>
    </style>

    <style name="Subtitle2_Label3" parent="Subtitle2">
        <item name="android:textColor">@color/label_tertiary_color</item>
    </style>

    <style name="Subtitle3">
        <item name="android:textSize">13sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Subtitle3_Label1" parent="Subtitle3">
        <item name="android:textColor">@color/label_primary_color</item>
    </style>

    <style name="Subtitle3_Label2" parent="Subtitle3">
        <item name="android:textColor">@color/label_secondary_color</item>
    </style>

    <style name="Subtitle3_Label3" parent="Subtitle3">
        <item name="android:textColor">@color/label_tertiary_color</item>
    </style>

    <style name="Title1">
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">@color/label_primary_color</item>
    </style>

    <style name="Title2">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">@color/label_primary_color</item>
    </style>

    <style name="Title3">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:textColor">@color/label_primary_color</item>
    </style>

    <style name="Paragraph1">
        <item name="android:textSize">17sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/label_secondary_color</item>
    </style>

    <style name="Paragraph2">
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/label_secondary_color</item>
    </style>

    <style name="Button_Primary" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/label_primary_color</item>
        <item name="android:background">@drawable/button_background_rounded</item>
        <item name="android:foreground">@drawable/button_ripple</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:height">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="backgroundTint">@color/label_primary_reverted_color</item>
    </style>

    <style name="IconButton_Primary" parent="Button_Primary">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="backgroundTint">@color/label_primary_color</item>
        <item name="android:textColor">@color/label_primary_reverted_color</item>
    </style>

    <style name="IconButton_Primary_Large" parent="IconButton_Primary">
        <item name="android:height">@dimen/large_button_height</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_huge</item>
    </style>

    <style name="Button_Secondary" parent="Button_Primary">
        <item name="android:textColor">@color/label_primary_color</item>
        <item name="backgroundTint">@color/background_secondary_color</item>
    </style>

    <style name="IconButton_Secondary" parent="Button_Secondary">
      <item name="android:paddingLeft">10dp</item>
      <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="IconButton_Secondary_Large" parent="IconButton_Secondary">
        <item name="android:height">@dimen/large_button_height</item>
        <item name="android:paddingHorizontal">@dimen/padding_large</item>
    </style>

    <style name="ExtendedToolbarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
    </style>
</resources>