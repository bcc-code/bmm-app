<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Application theme -->
    <style name="AppTheme" parent="AppTheme.Base" />
    <style name="AppTheme.Dark" parent="AppTheme.Base" />
    
    <style name="AppTheme.CustomThemeDarkGreen" parent="AppTheme.Base">
        <item name="tint_color">#017265</item>
        <item name="background_four_color">#017265</item>
        <item name="on_color_one_color">#FFFFFF</item>
    </style>

    <style name="AppTheme.CustomThemeOrange" parent="AppTheme.Base">
        <item name="tint_color">#FFB47D</item>
        <item name="background_four_color">#FFB47D</item>
        <item name="on_color_one_color">#000000</item>
    </style>
    
    <style name="AppTheme.CustomThemeViolet" parent="AppTheme.Base">
        <item name="tint_color">#685FD2</item>
        <item name="background_four_color">#685FD2</item>
        <item name="on_color_one_color">#FFFFFF</item>
    </style>

    <style name="AppTheme.CustomThemeRed" parent="AppTheme.Base">
        <item name="tint_color">#F15A29</item>
        <item name="background_four_color">#F15A29</item>
        <item name="on_color_one_color">#000000</item>
    </style>
    
    <style name="AppTheme.CustomThemeGolden" parent="AppTheme.Base">
        <item name="tint_color">#B49F6C</item>
        <item name="background_four_color">#B49F6C</item>
        <item name="on_color_one_color">#ffffff</item>
