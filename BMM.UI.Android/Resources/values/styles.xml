    <style name="Button_Primary" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/label_one_color</item>
        <item name="android:background">@drawable/button_background_rounded</item>
        <item name="android:foreground">@drawable/button_ripple</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:height">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="backgroundTint">?background_four_color</item>
    </style>

    <style name="Button_Primary_Medium" parent="Button_Primary">
        <item name="backgroundTint">@color/label_one_color</item>
        <item name="android:textColor">@color/label_one_reverted_color</item>
    </style>

    <style name="Button_Primary_Large" parent="Button_Primary">
        <item name="android:height">@dimen/large_button_height</item>
        <item name="backgroundTint">?background_four_color</item>
        <item name="android:textColor">?on_color_one_color</item>
    </style>

    <style name="IconButton_Primary" parent="Button_Primary">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="backgroundTint">?background_four_color</item>
        <item name="android:textColor">?on_color_one_color</item>
    </style>

    <style name="IconButton_Primary_Large" parent="IconButton_Primary">
        <item name="android:height">@dimen/large_button_height</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_huge</item>
    </style>

    <style name="Button_Secondary" parent="Button_Primary">
        <item name="android:textColor">@color/label_one_color</item>
        <item name="backgroundTint">@color/background_two_color</item>
    </style>

    <style name="Button_Tertiary">
        <item name="android:textColor">@color/label_one_color</item>
        <item name="android:background">@drawable/button_background_rounded_transparent</item>
        <item name="android:foreground">@drawable/button_ripple</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:height">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="IconButton_Secondary" parent="Button_Secondary">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="IconButton_Secondary_Large" parent="IconButton_Secondary">
        <item name="android:height">@dimen/large_button_height</item>
        <item name="android:paddingHorizontal">@dimen/padding_large</item>
    </style>

    <style name="ExtendedToolbarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="FadeInAlertDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="AppTheme.NotFullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">false</item>
    </style>

