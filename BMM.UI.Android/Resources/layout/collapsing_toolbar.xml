<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:theme="@style/AppTheme.Toolbar">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        local:collapsedTitleTextAppearance="@style/AppTheme.CollapseBarTextAppearance.Collapsed"
        local:expandedTitleTextAppearance="@style/AppTheme.CollapseBarTextAppearance.Expanded"
        local:layout_scrollFlags="scroll|exitUntilCollapsed"
        local:expandedTitleMarginStart="16dp"
        local:expandedTitleMarginBottom="22dp">

        <com.google.android.material.appbar.MaterialToolbar
            local:layout_collapseMode="pin"
            android:elevation="0dp"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>