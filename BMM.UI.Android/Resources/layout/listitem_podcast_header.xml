<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    local:MvxBind="Visibility Visibility(Documents.Count)">
    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="@dimen/element_margin_tiny"
        android:paddingBottom="@dimen/element_margin_tiny"
        local:MvxBind="Click ToggleOfflineCommand">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/text_view"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/download_switch"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/text_view_title"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_very_huge_title"
                android:textFontWeight="700"
                android:layout_gravity="center_vertical"
                android:text="Title"
                local:MvxBind="Text Podcast.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_view_subtitle"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium"
                android:layout_marginTop="@dimen/element_margin_tiny"
                android:layout_gravity="center_vertical"
                local:MvxLang="Text GetNotified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
              android:id="@+id/text_view_sub_subtitle"
              android:singleLine="true"
              android:textColor="@color/gray"
              android:textSize="@dimen/text_small"
              android:layout_gravity="center_vertical"
              local:MvxLang="Text GetNotifiedMessage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
        </LinearLayout>
      <ToggleButton
          android:id="@+id/follow_button"
            local:MvxBind="Click ToggleFollowingCommand; Checked IsFollowing, Mode=OneWay; Text FollowButtonText;"
            android:background="@drawable/togglebutton_follow_unfollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/button_text" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:divider="?android:dividerHorizontal"
        android:showDividers="beginning">
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>