<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/separator_color"
        android:layout_marginTop="8dp"
        local:layout_constraintStart_toStartOf="parent"
        local:layout_constraintEnd_toEndOf="parent"
        local:layout_constraintTop_toTopOf="parent"
        local:MvxBind="Visibility Visibility(Item.IsSeparatorVisible)" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textFontWeight="800"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="8dp"
        style="@style/Heading3"
        local:MvxBind="Text Item.Title"
        local:layout_constraintTop_toTopOf="parent"
        local:layout_constraintBottom_toBottomOf="parent"
        local:layout_constraintLeft_toLeftOf="parent"
        local:layout_constraintRight_toLeftOf="@id/link" />

    <androidx.cardview.widget.CardView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        local:cardBackgroundColor="@color/background_secondary_color"
        local:cardCornerRadius="16dp"
        local:cardElevation="0dp"

        local:layout_constraintTop_toTopOf="parent"
        local:layout_constraintBottom_toBottomOf="parent"
        local:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginRight="16dp"
        local:MvxBind="Click DeepLinkButtonCommand(.); Visibility InvertedVisibility(Item.HasLink)">

        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title2"
            android:maxLines="1"
            android:ellipsize="end"
            android:lineHeight="20sp"
            local:MvxLang="Text ExploreNewestViewModel_ShowAll, Source=ViewModel.TextSource" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
