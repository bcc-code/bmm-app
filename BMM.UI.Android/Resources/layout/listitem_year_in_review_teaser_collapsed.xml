<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/YearInReviewCardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/year_in_review_teaser_height"
    android:layout_marginHorizontal="@dimen/margin_medium"
    android:layout_marginVertical="@dimen/margin_small"
    android:background="@color/background_two_color"
    local:cardCornerRadius="28dp"
    local:MvxBind="Click ExpandOrCollapseCommand">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_two_color">
        
        <ImageView
            android:id="@+id/YearInReviewCardView"
            android:layout_width="@dimen/year_in_review_teaser_image_width_small"
            android:layout_height="@dimen/year_in_review_teaser_image_height_small"
            android:src="@drawable/year_in_review_teaser"
            android:layout_marginStart="@dimen/margin_xsmall"
            local:layout_constraintTop_toTopOf="parent"
            local:layout_constraintBottom_toBottomOf="parent"
            local:layout_constraintStart_toStartOf="parent" />
        
        <TextView
            android:id="@+id/TitleLabel"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xsmall"
            local:layout_constraintTop_toTopOf="parent"
            local:layout_constraintBottom_toBottomOf="parent"
            local:layout_constraintStart_toEndOf="@+id/YearInReviewCardView"
            local:layout_constraintEnd_toStartOf="@+id/ExpandButton"
            local:MvxBind="Text YearInReviewTeaser.Title"
            style="@style/Title1"/>

        <ImageButton
            android:id="@+id/ExpandButton"
            android:layout_width="@dimen/year_in_review_teaser_expand_button_size"
            android:layout_height="@dimen/year_in_review_teaser_expand_button_size"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_arrow_down"
            android:layout_marginEnd="@dimen/margin_medium"
            local:layout_constraintTop_toTopOf="parent"
            local:layout_constraintBottom_toBottomOf="parent"
            local:layout_constraintEnd_toEndOf="parent"
            local:MvxBind="Click ExpandOrCollapseCommand" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>