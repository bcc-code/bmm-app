<resources>
    <!--
          Base application theme for API 21+. This theme completely replaces
          AppTheme from BOTH res/values/styles.xml on API 21+ devices.
      -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="ProgressGreen" parent="android:Widget.Material.ProgressBar">
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">25dp</item>
        <item name="android:maxHeight">25dp</item>
        <item name="android:layout_marginTop">@dimen/element_margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/element_margin_medium</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/tint_color</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="SeekBarPlayer" parent="android:Widget.Material.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:splitTrack">false</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

    <style name="SeekBarMiniPlayer" parent="android:Widget.Material.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_miniplayer</item>
        <item name="android:minHeight">2.5dp</item>
        <item name="android:maxHeight">2.5dp</item>
        <item name="android:thumb">@null</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>