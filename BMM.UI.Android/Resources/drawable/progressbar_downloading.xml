<?xml version="1.0" encoding="UTF-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
    <shape>
        <gradient
                android:startColor="#eff2f5"
                android:centerColor="#eff2f5"
                android:centerY="1.0"
                android:endColor="#eff2f5"
                android:angle="270" />
    </shape>
   </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:startColor="?attr/tint_color"
                android:centerColor="?attr/tint_color"
                android:centerY="1.0"
                android:endColor="?attr/tint_color"
                android:angle="270" />
        </shape>
    </clip>
    </item>
</layer-list>